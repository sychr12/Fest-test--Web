    <script>
        document.getElementById('runTest').addEventListener('click', function() {
            const button = this;
            button.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Testando...';
            button.disabled = true;
            
            // Reset values
            document.querySelector('.download-speed').textContent = '0 Mbps';
            document.querySelector('.upload-speed').textContent = '0 Mbps';
            document.querySelector('.ping-value').textContent = '-';
            document.querySelector('.jitter-value').textContent = '-';
            document.querySelector('.cping-value').textContent = '-';
            document.getElementById('speedIndicator').style.width = '0%';
            
            // Simulate test sequence
            setTimeout(() => {
                // Ping result
                document.querySelector('.ping-value').textContent = Math.floor(Math.random() * 25) + 5 + ' ms';
                
                // Download test
                let downloadProgress = 0;
                const downloadInterval = setInterval(() => {
                    downloadProgress += Math.random() * 15;
                    if (downloadProgress >= 100) {
                        clearInterval(downloadInterval);
                        const downloadSpeed = Math.floor(Math.random() * 700) + 100;
                        document.querySelector('.download-speed').textContent = downloadSpeed + ' Mbps';
                        document.getElementById('speedIndicator').style.width = Math.min(100, (downloadSpeed / 1000) * 100) + '%';
                        document.querySelector('.jitter-value').textContent = (Math.random() * 4).toFixed(1) + ' ms';
                        
                        // Start upload test
                        simulateUpload();
                    }
                }, 30);
            }, 800);
            
            function simulateUpload() {
                let uploadProgress = 0;
                const uploadInterval = setInterval(() => {
                    uploadProgress += Math.random() * 8;
                    if (uploadProgress >= 100) {
                        clearInterval(uploadInterval);
                        const uploadSpeed = Math.floor(Math.random() * 200) + 30;
                        document.querySelector('.upload-speed').textContent = uploadSpeed + ' Mbps';
                        document.querySelector('.cping-value').textContent = Math.floor(Math.random() * 15) + 10 + ' ms';
                        
                        // Reset button
                        setTimeout(() => {
                            button.innerHTML = '<i class="fas fa-sync-alt"></i> Testar Novamente';
                            button.disabled = false;
                        }, 500);
                    }
                }, 40);
            }
        });
    </script>
